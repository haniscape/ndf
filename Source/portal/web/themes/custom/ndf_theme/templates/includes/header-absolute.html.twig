<div id="header-absolute">
  <div class="{{ b4_top_container }} row mx-auto">
    <header id="header">
      {{ page.header }}
      {% if page.nav_branding or page.nav_main or page.nav_additional %}
        <nav class="{{ nav_classes }}">
          <div class="col-auto p-0">
            <a class="navbar-brand" href="{{ url('<front>') }}">
              <img src="{{ base_url }}/{{ bamboo_path_system('theme', 'ndf_theme') }}/images/logos/ndf-logo-white.svg">
            </a>
          </div>

          <div class="col-3 col-md-auto p-0 text-right">
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse col-12 col-md-auto p-0 justify-content-end" id="navbarSupportedContent">
            {{ page.nav_main }}
            {{ page.nav_additional }}



            <div class="lang-switcher">
              {% if url_query_string is not null %}
                {% set url = current_path ~ '?' ~ url_query_string %}
              {% else %}
                {% set url = current_path %}
              {% endif %}
              {%- if bamboo_i18n_current_lang() == 'ar' %}
                <div class="lang">
                  <a href="{{ base_url }}/{{ url }}">English</a>
                </div>
              {% else %}
                <div class="lang">
                  <a href="{{ base_url }}/ar{{ url }}">العربية</a>
                </div>
              {% endif %}
            </div>





          </div>
        </nav>
      {% endif %}

    </header>
  </div>
</div>
